 @model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Admin Portal</h1>

<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Create", "User")'">Create New User</button>
 
<h2 class="text-black">List of Users</h2>
  
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Username</th><th>Firstname</th><th>Surname</th><th>Email</th><th>Update User</th><th>Delete</th></tr>
    @foreach (ApplicationUser user in Model)
    {
    <tr>
        <td>@user.Id</td>
        <td>@user.UserName</td>
        <td>@user.FirstName</td>
        <td>@user.Surname</td>
        <td>@user.Email</td>
        <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                    Update
                </a>
        </td>
        <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
        </td>
    </tr>
    }
</table>
