@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!--<h1>@ViewData["Title"]</h1>-->

<div class="row">
    <div class="center-block" style="display:flex;justify-content:center;align-items:center;" >
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Register your Zorro Account</h2>
            <div class="spacer"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.Surname" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.Surname"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.CreditCardNumber" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.CreditCardNumber"></label>
                <span asp-validation-for="Input.CreditCardNumber" class="text-danger"></span>
            </div>
                 <div class="form-floating" style="margin-bottom:15px;">
                <input asp-for="Input.CCExpiry" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.CCExpiry"></label>
                <span asp-validation-for="Input.CCExpiry" class="text-danger"></span>
            </div>
            <div style="width:50%;float:right">
            <button id="registerSubmit" type="submit" class="w-75 btn btn-lg btn-primary" style="float:right;">Register</button>
            </div>
        </form>
    </div>
