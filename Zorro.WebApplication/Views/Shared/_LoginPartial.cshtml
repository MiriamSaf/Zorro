@using Microsoft.AspNetCore.Identity
@using Zorro.WebApplication.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))  { 

    <li class="nav-item align-bottom">
        <a  class="nav-link text-dark h5" style="margin:15px;padding4px;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name - Edit Profile</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-light btn-hover ff6a3d">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark pretty-underline-animation" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark pretty-underline-animation" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
