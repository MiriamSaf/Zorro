@model Zorro.WebApplication.Models.BillPay

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BillPay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <select asp-for="AccountNumber" class ="form-control" asp-items="ViewBag.AccountNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="PayeeId" class="control-label"></label>
                <input asp-for="PayeeId" class="form-control" />
                <span asp-validation-for="PayeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTimeUtc" class="control-label"></label>
                <input asp-for="ScheduleTimeUtc" class="form-control" />
                <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentFrequency" class="control-label"></label>
                <input asp-for="PaymentFrequency" class="form-control" />
                <span asp-validation-for="PaymentFrequency" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BillState" /> @Html.DisplayNameFor(model => model.BillState)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

