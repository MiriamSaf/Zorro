@model Zorro.WebApplication.Dtos.BpayRequestDto

@{
    ViewData["Title"] = "BPAY";
}

<h1>BPAY</h1>
<form asp-action="CreateBpay" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-sm-6">
            <label asp-for="BillerCode" class="form-label">Biller</label>
            <div class="input-group">
                <input asp-for="BillerCode" type="text" class="form-control" id="billerInput">
                <button class="btn btn-outline-secondary" type="button" id="billerInput">Search</button>
            </div>
        </div>
        <div class="col-sm-6">
            <label for="billerName" class="form-label">Biller name</label>
            <input class="form-control" type="text" id="billerName" placeholder="Disabled input" aria-label="Disabled input example" disabled>
        </div>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="RememberBiller" type="checkbox" class="form-check-input">
        <label asp-for="RememberBiller" class="form-check-label" >Remember biller</label>
    </div>

    <div class="mb-3">
      <label for="crn" class="form-label">Customer reference number</label>
      <input type="text" class="form-control" id="crn"/>
    </div>

    <div class="row mb-3">
        <div class="col-sm-6">
            <label asp-for="Amount" class="form-label">Amount (maximum $10,000)</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input asp-for="Amount" type="number" class="form-control" min="0.00" max="10000.00" step="0.01"/>
            </div>
        </div>
        <div class="col-sm-6">
            <label asp-for="Date" class="form-label">When</label>
            <input asp-for="Date" type="Date"  class="form-control"/>
        </div>
    </div>
    
    <input type="submit" class="btn btn-dark" value="Pay"/>
</form>
