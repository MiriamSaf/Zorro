 @model Zorro.Dal.Models.ApplicationUser

@{
    ViewData["Title"] = "Update";
}

<script>
    $('#checkbox-value').text($('#TwoFactorEnabled').val());

    $("#TwoFactorEnabled").on('change', function() {
      if ($(this).is(':checked')) {
        $(this).attr('value', 'true');
      } else {
        $(this).attr('value', 'false');
      }
  
      $('#checkbox-value').text($('#TwoFactorEnabled').val());
    });
</script>

  
<h1 class="text-black">Update User</h1>
<div asp-validation-summary="All" class="text-danger"></div>
  
<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
        <div class="form-group">
        <label for="User Role">User Role</label>
        <input for="User Role" value="To be Added" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
    </div>
      <div class="form-group">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" class="form-control" />
    </div>
    <label class="form-check-label">Two Factor Authentication</label>
    <div class="form-check">
        <input asp-for="TwoFactorEnabled" class="form-check-input" type="checkbox" >
        <label class="form-check-label">Enable/Disable</label>
    </div>
    <div class="form-group">
        <label asp-for="LockoutEnd"></label>
        <input asp-for="LockoutEnd" class="form-control" aria-required="true" />
        
    </div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <button type="submit" class="btn btn-primary">Save</button>
</form>