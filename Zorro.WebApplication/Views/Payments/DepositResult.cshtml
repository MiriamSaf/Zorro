@using Zorro.WebApplication.ViewModels
@model Zorro.WebApplication.ViewModels.DepositViewModel

@{
    ViewData["Title"] = "Deposit Result";
}
@if (Model.Status == DepResultViewModelStatus.Approved)
{
    <div class="card">
        <h5 class="card-header">Deposit Successful</h5>
        <div class="card-body">
            <div class="row">
                <div class="col">Receipt Number:</div><div class="col">1234567</div>
            </div>
            <div class="row">
                <div class="col">Amount:</div><div class="col">$@Model.Amount</div>
            </div>
            <div class="row">
                <div class="col">Comment:</div><div class="col">@Model.Description</div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card text-white bg-danger">
        <h5 class="card-header text-white">@Model.Status</h5>
        <div class="card-body">
            <div class="row">
                <div class="col">Amount</div><div class="col">$@Model.Amount</div>
            </div>
            <div class="row">
                <div class="col">Comment</div><div class="col">@Model.Description</div>
            </div>
        </div>
    </div>
}

<div>
  <button type="button" class="p-2 btn btn-dark" onclick="location.href='@Url.Action("Dashboard", "Home")'">Return to Dashboard</button>
</div>

